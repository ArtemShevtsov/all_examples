<article class="listing">
  <a {{action 'toogleImageSize'}} class="image {{if isWide "wide"}}">
    <img src="{{actor.image}}" alt="">
    <small>View Larger</small>
  </a>
  <h3>{{actor.id}}</h3>
  <div class="detail name">
    <span>Name: </span> {{actor.name}}
  </div>
  <div class="detail age">
    <span>Age: </span> {{actor.age}}
  </div>
  <div class="detail type">
    <span>Type: </span> {{rental-property-type-helper actor.type}} - {{actor.type}}
  </div>
  <!-- {{location-map location=actor.city}} -->
</article>
